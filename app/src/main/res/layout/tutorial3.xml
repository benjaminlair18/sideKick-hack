<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/imageView4"
        android:layout_marginTop="35dp"
        android:src="@drawable/pinksos250"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Get help fast."
        android:id="@+id/textView4"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        style="@android:style/TextAppearance.Large"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kickstart will automatically call an emergency contact that you supply if you fail to reach your destination in a reasonable amount of time."
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4" />
</RelativeLayout>
