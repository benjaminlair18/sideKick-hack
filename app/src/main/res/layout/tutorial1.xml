<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/logo"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Know the safeset possible path, whenever, wherever."
        android:id="@+id/textViewTut1"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        style="@android:style/TextAppearance.Large"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sidekick empowers women to take safety into their own hands. Keep peace of mind with Sidekick looking ahead for you."
        android:id="@+id/textViewDescripTut1"
        android:layout_below="@+id/textViewTut1"
        android:layout_alignStart="@+id/textViewTut1"
        android:layout_marginTop="15dp"
        android:layout_alignEnd="@+id/textViewTut1" />

</RelativeLayout>

